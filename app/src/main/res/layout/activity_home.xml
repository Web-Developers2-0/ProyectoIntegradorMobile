<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#262626"
    tools:context=".HomeActivity">

    <!-- Saludo al usuario -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/interregular"
        android:hint="@string/user_hello"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="18sp" />

    <!-- Botón de imagen de usuario -->
    <ImageButton
        android:id="@+id/btnUser"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:background="#262626"
        android:src="@drawable/gatitoinfo"
        android:contentDescription="@string/user_image_desc"/>


    <!-- Botón de notificaciones -->
    <ImageButton
        android:id="@+id/btnNotification"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="290dp"
        android:layout_marginTop="40dp"
        android:background="#262626"
        android:src="@drawable/notification"
        android:contentDescription="@string/notification_desc"/>


    <!-- Botón de carrito de compras -->
    <ImageButton
        android:id="@+id/btnCart"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="80dp"
        android:background="#262626"
        android:src="@drawable/cart"
        app:tint="@android:color/white"
        android:contentDescription="@string/cart_desc"/>

    <!-- Título principal -->
    <TextView
        android:id="@+id/mainViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/tekovariablefontwght"
        android:hint="@string/home_title"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="28sp" />

    <!-- Botones de categoría -->
    <ImageButton
        android:id="@+id/btnMarvel"
        android:layout_width="310dp"
        android:layout_height="85dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_border"
        android:contentDescription="@string/marvel_category"
        android:scaleType="fitCenter"
        android:src="@drawable/marvellogo"/>

    <ImageButton
        android:id="@+id/btnDC"
        android:layout_width="310dp"
        android:layout_height="85dp"
        android:layout_below="@id/btnMarvel"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_border"
        android:contentDescription="@string/dc_category"
        android:scaleType="fitCenter"
        android:src="@drawable/dclogo" />

    <!-- Título "Más populares" -->
    <TextView
        android:id="@+id/tv_mas_populares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/btnDC"
        android:layout_marginTop="2dp"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/bangersregular"
        android:text="@string/mas_populares"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <!-- Botón "Ver más" -->
    <Button
        android:id="@+id/btnSeeMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/btnDC"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/primary_button"
        android:fontFamily="@font/bangersregular"
        android:text="@string/btn_seemore"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <!-- Tarjetas con cómics -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_mas_populares"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <!-- Primera tarjeta estática: Comic 1 -->
        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Imagen del cómic -->
                <ImageView
                    android:id="@+id/comic_image"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/marveldeadpool"
                    android:contentDescription="@string/deadpool_image_desc"/>

                <!-- Título del cómic -->
                <TextView
                    android:id="@+id/comic_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deadpool_title"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/interregular" />

                <!-- Subtítulo -->
                <TextView
                    android:id="@+id/comic_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bow_to_king"
                    android:fontFamily="@font/interregular"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp" />

                <!-- Rating del cómic -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:id="@+id/comic_star_icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/product_star"
                        android:drawableStart="@drawable/product_star"/>

                    <TextView
                        android:id="@+id/comic_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rating_4_9"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Segunda tarjeta estática: Comic 2 -->
        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Imagen del cómic -->
                <ImageView
                    android:id="@+id/comic_image_2"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gwenpool"
                    android:contentDescription="@string/gwenpool_image_desc"/>

                <!-- Título del cómic -->
                <TextView
                    android:id="@+id/comic_title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gwenpool_title"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/interregular" />

                <!-- Subtítulo -->
                <TextView
                    android:id="@+id/comic_subtitle_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/strikes_back"
                    android:fontFamily="@font/interregular"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp" />

                <!-- Rating del cómic -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:id="@+id/comic_star_icon_2"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/product_star"
                        android:drawableStart="@drawable/product_star"/>

                    <TextView
                        android:id="@+id/comic_rating_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rating_4_9"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>